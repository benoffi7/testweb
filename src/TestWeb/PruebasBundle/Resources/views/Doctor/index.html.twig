<h1>Doctor list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Dni</th>
            <th>Fechanacimiento</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('doctor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.Apellido }}</td>
            <td>{{ entity.Nombre }}</td>
            <td>{{ entity.Dni }}</td>
            <td>{% if entity.FechaNacimiento %}{{ entity.FechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('doctor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('doctor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('doctor_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

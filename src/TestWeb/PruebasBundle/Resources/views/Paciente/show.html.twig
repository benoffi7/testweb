{% extends '::base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
{% endblock %}


{% block javascripts %}
<script>
$(document).ready
(
		function()
		{			
			$('#cantidadTurnos').load('{{ path('cantidad_turnos', {id: entity.id}) }}');
    	}
);

</script>
{% endblock %}

{% block body %}

<h1>Paciente</h1>

<table class="record_properties" border="1">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Apellido</th>
            <td>{{ entity.Apellido }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.Nombre }}</td>
        </tr>
        <tr>
            <th>Dni</th>
            <td>{{ entity.Dni }}</td>
        </tr>
        <tr>
            <th>Fecha Nacimiento</th>
            <td>{{ entity.FechaNacimiento|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Cantidad de Turnos</th>
            <td><span id="cantidadTurnos" name="cantidadTurnos" /></td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('paciente') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('paciente_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('paciente_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>


{% endblock %}
